FoamFile
{
    format      ascii;
    class       volVectorField;
    location    "0";
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform (0 0 0);

boundaryField
{
    tarmac
    {
        type            slip;
    }
    upperArea
    {
        type            freestreamVelocity;
        freestreamValue uniform (-30 0 0);
        value           uniform (-30 0 0);
    }
    inlet
    {
        type            fixedValue;
        value           uniform (-30 0 0);
    }
    outlet
    {
        type            zeroGradient;
    }
    lateralArea
    {
        type            freestreamVelocity;
        freestreamValue nonuniform List<vector> 0();
        value           nonuniform List<vector> 0();
    }
    symmetryPlane
    {
        type            symmetry;
    }
    procBoundary3to1
    {
        type            processor;
        value           uniform (0 0 0);
    }
    procBoundary3to2
    {
        type            processor;
        value           uniform (0 0 0);
    }
}


